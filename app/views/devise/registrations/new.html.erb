  <div class="row display-flex margin-top-main">
    <div class="col-xs col-md-offset-3 justify-content-center">
      <h3>sign up</h3>
      <div class="row">
        <div class="col-md-6 col-xs-8">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= devise_error_messages! %>

          <div class="form-group">
           <label><%= f.label :email,class: 'control-label' %></label>
           <%= f.email_field :email, autofocus: true, class: 'col-xs-6 form-control control-label' %><br />
         </div>

          <div class="form-group">
           <label><%= f.label :first_name, class: 'control-label' %></label>
           <%= f.text_field :first_name, class: 'col-xs-6 form-control control-label' %><br />
         </div>

          <div class="form-group">
           <label><%= f.label :last_name, class: 'control-label' %></label>
           <%= f.text_field :last_name, class: 'col-xs-6 form-control control-label' %><br />
         </div>

          <div class="form-group">
          <label><%= f.label :password, class: 'control-label password' %></label>
           <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length %> characters minimum)</em>
           <% end %><br />
           <%= f.password_field :password, autocomplete: "off", class: 'col-xs-6 form-control control-label' %><br />
         </div>

          <div class="form-group">
           <label><%= f.label :password_confirmation %></label>
           <%= f.password_field :password_confirmation, autocomplete: "off", class: 'col-xs-6 form-control control-label' %><br />
         </div>
         <div class="row">
           <div class="col-xs-12">
             <div class="form-group alignment-right">
              <%= f.submit "Sign up" %>
             </div>
             <% end %>
          </div>
        </div>
        <div>
          already have a user account?
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>

</div>
</div>
