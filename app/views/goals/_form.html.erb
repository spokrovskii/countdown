<%= render 'application/errors' %>
<%= form_for @goal do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_time %>
  <%= f.datetime_select :due_time.to_time.strftime('%a, %d %b %Y %H:%M:%S') %>

  <%= f.submit 'Save Goal', class: 'button' %>
<% end %>
