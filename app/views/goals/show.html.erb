<div>
  <% if current_user && current_user.can_modify?(@goal) %>
      <ul class="button-group">
        <li><%= link_to 'Edit', edit_goal_path(@goal), class: 'button tertiery' %></li>
        <li><%= button_to 'Delete', goal_path(@goal), method: 'delete',
                                                      class: 'button tertiery' %>
        </li>
      </ul>
  <% end  %>
</div>
<div class="goals-details">
  <h2>Goals Details</h2>
  <h1><%= @goal.name %></h1>
  <h3>Goal description</h3>
   <%= @goal.created_at.localtime.strftime('%a, %d %b %Y %H:%M:%S') %>
   <%= @goal.description  %>
   <%= @goal.due_time.strftime('%a, %d %b %Y %H:%M:%S') %></br>
   <div class='dynamic'>
   <%= render :partial => 'goals/count_down_portion' %>
</div>
