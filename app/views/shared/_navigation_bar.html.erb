<div class="margin-top-main">

  <div class="nav nav-margin">
    <a class="navbar-brand" href="#">Count-Down</a>
    <div>
    <%= link_to  goals_path, method: 'get', class: 'glyphicons glyphicons-clock'  do %>
      <i class="glyphicons glyphicons-clock"></i>
    <% end %>
    </div>
  </div>

  <ul class="nav">
