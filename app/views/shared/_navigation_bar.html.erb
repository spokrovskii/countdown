  <!-- Collect the nav links, forms, and other content for toggling -->

  <ul class="nav">
    <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to 'My goals', goals_path, method: 'get' %>
    </li>
    <li class="nav-item">
      <%= link_to 'New', new_goal_path, method: 'get' %>
    </li>
    <% end %>
  </ul>

</div>
